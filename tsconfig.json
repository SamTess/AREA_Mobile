{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["jest", "@testing-library/jest-native"],
    "paths": {
      "@/*": [
        "./*"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "test-utils/**/*.d.ts"
  ],
  "exclude": [
    "app-example/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ]
}